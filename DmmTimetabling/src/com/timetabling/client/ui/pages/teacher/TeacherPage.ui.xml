<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
	
		.panel {
		}
		
		.form {
			display : table-row;
		}
	
		.block {
			float : left;
			display : inline;
			margin-right : 10px;
		}
	
		.button {
		}
	
		.output {
			display : table-row;
		}
		
	</ui:style>
	
	
	<g:FlowPanel styleName="{style.panel}" >
	
		<g:FlowPanel styleName="{style.form}" >
			<g:FlowPanel styleName="{style.block}" >
				<g:Label>Cathedra name:</g:Label>
				<b:TextBox ui:field="nameSetter"></b:TextBox>
			</g:FlowPanel>
			<g:FlowPanel styleName="{style.block}" >
				<g:Label>Cathedra email:</g:Label>
				<b:TextBox ui:field="emailSetter"></b:TextBox>
			</g:FlowPanel>
			<b:Button styleName="{style.button}" ui:field="saveButton" text="Save" type="SUCCESS" />
		</g:FlowPanel>
		
		<g:FlowPanel styleName="{style.output}" ui:field="persistedCathedras" >
		</g:FlowPanel>
		
	</g:FlowPanel>
	
</ui:UiBinder> 